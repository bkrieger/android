<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="HappTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/HappActionBar</item>
        <item name="android:selectableItemBackground">@drawable/ab_item_background</item>

        <!-- Support Library Compatability -->
        <item name="actionBarStyle">@style/HappActionBar</item>
        <item name="selectableItemBackground">@drawable/ab_item_background</item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
    </style>

    <style name="HappActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/happ_purple</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:icon">@drawable/ic_happ</item>

        <!-- Support Library Compatability -->
        <item name="background">@color/happ_purple</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="icon">@drawable/ic_happ</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>